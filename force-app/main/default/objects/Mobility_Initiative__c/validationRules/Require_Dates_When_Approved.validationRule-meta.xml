<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Dates_When_Approved</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Approval_Status__c, &quot;Approved&quot;),
  OR(
    ISBLANK(Planned_Start_Date__c),
    ISBLANK(Planned_End_Date__c)
  )
)</errorConditionFormula>
    <errorMessage>Approved initiatives must have finalized start and end dates</errorMessage>
</ValidationRule>
